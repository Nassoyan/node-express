<%- include('partials/header.ejs'); %>

<h1>Home</h1>
<p> <%= homeContent %> </p>

 <% postLog.forEach((item) => { %>
    <h1><%= item.title %></h1>
        <p> 
            <%= item.content.length > 100 ? item.content.slice(0, 100)+"..." : item.content  %>
            <% if (item.content.length > 100) { %>
                <a href="/posts/<%= item.title %>">Read More</a>
              <% } %>
        </p>
<% }) %>

<%- include('partials/footer.ejs'); %>